{% comment %} <!-- JSON-LD markup generated by Google Structured Data Markup Helper. -->
{%- if request.page_type == 'product'-%} 
    <script type="application/ld+json">
        {
            "@context" : "http://schema.org",
            "@type" : "Product",
            "name" : "{{ product.title }}",
            "description" : "{{ product.description | strip_html }}",
            "url" : "{{ product.url | prepend:'https://myborosil.com/' }}",
            "brand" : {
                "@type" : "Brand",
                "name" : "Borosil",
                "logo" : "https://myborosil.com/cdn/shop/t/277/assets/Borosil-logo-white.png?v=181545771884648499631686559225"
            }
        }
    </script>
{%- elsif request.page_type == 'index' -%} 
    <script type="application/ld+json">
        {
            "@context" : "http://schema.org",
            "@type" : "Homepage",
            "name" : "Borosil's official ecommerce website",
            "description" : "One of India's best known consumer kitchenware brands for over half a century",
            "url" : "http://myborosil.com/",
            "brand" : {
                "@type" : "Brand",
                "name" : "Borosil",
                "logo" : "https://myborosil.com/cdn/shop/t/277/assets/Borosil-logo-white.png?v=181545771884648499631686559225"
            }
        }
    </script>
{% elsif request.page_type == 'collection' %}
    <script type="application/ld+json">
        {
            "@context" : "http://schema.org",
            "@type" : "Homepage",
            "name" : "{{ collection.title }}",
            "description" : "{{ collection.description | strip_html }}",
            "url" : "{{ collection.url | prepend:'https://myborosil.com/'}}",
            "brand" : {
                "@type" : "Brand",
                "name" : "Borosil",
                "logo" : "https://myborosil.com/cdn/shop/t/277/assets/Borosil-logo-white.png?v=181545771884648499631686559225"
            }
        }
    </script>
{% elsif template.name  == 'article' %}
    <script type="application/ld+json">
        {
            "@context" : "http://schema.org",
            "@type" : "Homepage",
            "name" : "{{ article.title }}",
            "description" : "{{ blog.title }}",
            "url" : "{{ article.url |prepend:'https://myborosil.com/' }}",
            "brand" : {
                "@type" : "Brand",
                "name" : "Borosil",
                "logo" : "https://myborosil.com/cdn/shop/t/277/assets/Borosil-logo-white.png?v=181545771884648499631686559225"
            }
        }
    </script>
{% endif %} {% endcomment %}