{% comment %} Product Schema {% endcomment %}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "{{ product.title }}",
  "sku": "{{ product.first_available_variant.sku }}",
  "color": "Black",
  "description": "{{ product.description | strip_html}}",
  "model": "{{ product.type }}",
  "Category": "{{ product.category}}",
  "review": {
    "@type": "Review",
    "name": "First",
    "author": {
      "@type": "Person",
      "name": "Mrinal Chakraborty"
    },
    "datePublished": "2024-09-09",
    "description": "Had bought this for my wife , so that she can carry her favorite coffee to office and remains warm for 2/3 hours .. so far she is happy .. let's hope it lasts as BOROSIL is such a big name and trusted",
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": 5,
      "bestRating": 5
    }
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": 4.2,
    "ratingCount": 160
  },
  "brand": {
    "@type": "Brand",
    "name": "{{ product.vendor }}"
  },
  "logo": "https://cdn.shopify.com/s/files/1/0551/8009/9722/files/Borosil-logo-blue.png?v=1693978280",
  "image": [
    {% for image in product.images %}
      {%  assign imageUrl = image |  prepend: 'https://cdn.shopify.com/s/' %}
       {{ imageUrl |  prepend: '"' |  append: '"' |  }}{% unless forloop.last %}, {% endunless -%}
    {% endfor %}
  ],
    "offers": {
    "@type": "Offer",
    "price": {{ product.price | divided_by:100 }},
    "priceCurrency": "INR",
    "availability": "https://myborosil.com/collections/deals",
    "priceValidUntil": "2025-08-05T18:20:56.000Z",
    "url": "{{ product.handle | prepend: 'https://myborosil.com/products/' }}",
    "shippingDetails": {
      "@type": "OfferShippingDetails",
      "shippingDestination": {
        "@type": "DefinedRegion",
        "addressCountry": "IN"
      },
      "shippingRate": {
        "@type": "MonetaryAmount",
        "value": {%- if product.first_available_variant.price < 399 -%}"50"{%- else -%}"0"{%- endif -%},
        "currency": "INR"
      },
      "freeShippingThreshold": {
        "@type": "MonetaryAmount",
        "value": 399,
        "currency": "INR"
      },
      "deliveryTime": {
        "@type": "ShippingDeliveryTime",
        "businessDays": {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday",
            "Saturday",
            "Sunday"
          ],
          "opens": "09:00",
          "closes": "21:00"
        },
        "transitTime": {
          "@type": "QuantitativeValue",
          "minValue": 3,
          "maxValue": 5,
          "unitCode": "DAY",
          "unitText": "business days"
        },
        "handlingTime": {
          "@type": "QuantitativeValue",
          "minValue": 1,
          "maxValue": 3,
          "unitCode": "DAY",
          "unitText": "business days"
        }
      },
      "seller": {
        "@type": "Corporation",
        "name": "{{ product.vendor }}"
      }
    },
  "Description": "This product comes with a 1-year warranty against defects in materials and workmanship"
  }
}
</script>
{% comment %} End Product Schema {% endcomment %}

{% comment %} BreadcrumbsList Schema {% endcomment %}
<script type="application/ld+json">
{%  assign breadList =  product.metafields.custom.breadcrumbs |  split: "," %}

    {% for bread in breadList %}
      {% if forloop.index == 1 %}
        {% assign l1 = bread %}
      {% elsif forloop.index == 2 %}
        {% assign l2 = bread %}
      {% endif %}
    {% endfor %}
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": {
        "@id": "https://myborosil.com/"
      }
    },
    {
      "@type": "ListItem",
      "position": 2,  
      "name": "{{ l1 }}",
      "item": {
        "@id": "{{ l1 | prepend: 'https://myborosil.com/collections/' }}"
      }
    },
    {
      "@type": "ListItem",
      "position": 3,  
      "name": "{{ l2 }}",
      "item": {
        "@id": "{{ l2 | prepend: 'https://myborosil.com/collections/' }}"
      }
    },
    {
      "@type": "ListItem",
      "position": 4,
      "name": "{{ product.collections[0].title }}",
      "item": {
        "@id": "{{ product.collections[0].url |  prepend: 'https://myborosil.com' }}"
      }
    },
    {
      "@type": "ListItem",
      "position": 4,
      "name": "{{ product.title }}",
      "item": {
        "@id": "{{ product.handle }}"
      }
    }
  ]
}
</script>
{% comment %} End BreadcrumsList Schema {% endcomment %}

