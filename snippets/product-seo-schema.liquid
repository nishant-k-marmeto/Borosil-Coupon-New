<script type="application/ld+json">
{% if product.metafields.FAQ.question.size > 0 %}
 
  
{
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "title": "FAQs",
  "description": "Explore frequently asked questions about Product.",
  "mainEntity": [
 {% assign total_faq = product.metafields.FAQ.question.size | minus: 1 %}
  {% for i in (0..total_faq) limit:5 %}
    {
      "@type": "Question",
      "name": "{{ product.metafields.FAQ.question[i] }}",
      "acceptedAnswer": {
        "@type": "Answer",
        "text": "{{ product.metafields.FAQ.answer }}"
      }
    }{% unless forloop.last %},{% endunless %}
{% endfor %}
  ],
  "keywords": {{ product.tags | split: ',' |  join: ',' }}
}
