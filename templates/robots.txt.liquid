    {{ 'Disallow: /search*' }}
  {%- endif -%}

  {%- if group.user_agent.value == 'adsbot-google' -%}
    {{ 'Disallow: /*?q=*' }}
  {%- endif -%}
  {%- if group.user_agent.value == 'adsbot-google' -%}
    {{ 'Disallow: /search*' }}
  {%- endif -%}

  {%- if group.user_agent.value == '*' -%}
    {{ 'Disallow: /*.atom' }}
  {%- endif -%}

  {%- if group.sitemap != blank -%}
    {{ group.sitemap }}
  {%- endif -%}
{% endfor %}

