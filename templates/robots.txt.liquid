  {%- endif -%}

  {%- if group.user_agent.value == 'AdsBot-Google' -%}
    {{ 'Disallow: /*?q=*' }}
  {%- endif -%}
  {%- if group.user_agent.value == 'AdsBot-Google' -%}
    {{ 'Disallow: /search*' }}
  {%- endif -%}

  {%- if group.user_agent.value == 'Googlebot-Image' -%}
    {{ 'Disallow: /*?q=*' }}
