                {% render 'responsive-picture' 
                  forloop: forloop,
                  img_class: "product-main-image",
                  desktop_image: media.preview_image, 
                  mobile_image: media.preview_image,
                  desktop_size: '50vw',
                  mobile_size: '100vw'
                %}
