                          <path id="telegram-4" d="M12,0c-6.626,0 -12,5.372 -12,12c0,6.627 5.374,12 12,12c6.627,0 12,-5.373 12,-12c0,-6.628 -5.373,-12 -12,-12Zm3.224,17.871c0.188,0.133 0.43,0.166 0.646,0.085c0.215,-0.082 0.374,-0.267 0.422,-0.491c0.507,-2.382 1.737,-8.412 2.198,-10.578c0.035,-0.164 -0.023,-0.334 -0.151,-0.443c-0.129,-0.109 -0.307,-0.14 -0.465,-0.082c-2.446,0.906 -9.979,3.732 -13.058,4.871c-0.195,0.073 -0.322,0.26 -0.316,0.467c0.007,0.206 0.146,0.385 0.346,0.445c1.381,0.413 3.193,0.988 3.193,0.988c0,0 0.847,2.558 1.288,3.858c0.056,0.164 0.184,0.292 0.352,0.336c0.169,0.044 0.348,-0.002 0.474,-0.121c0.709,-0.669 1.805,-1.704 1.805,-1.704c0,0 2.084,1.527 3.266,2.369Zm-6.423,-5.062l0.98,3.231l0.218,-2.046c0,0 3.783,-3.413 5.941,-5.358c0.063,-0.057 0.071,-0.153 0.019,-0.22c-0.052,-0.067 -0.148,-0.083 -0.219,-0.037c-2.5,1.596 -6.939,4.43 -6.939,4.43Z"/>
                        </svg>
                      </a>
                    {% endif %}
                    {% if settings.social_linkedin_link %}
                      <a target="_blank" class="social social-linkedin" href="{{ settings.social_linkedin_link }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="34" height="34" viewBox="0 0 28.669 28.668" fill="#fff">
                          <path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm-2 16h-2v-6h2v6zm-1-6.891c-.607 0-1.1-.496-1.1-1.109 0-.612.492-1.109 1.1-1.109s1.1.497 1.1 1.109c0 .613-.493 1.109-1.1 1.109zm8 6.891h-1.998v-2.861c0-1.881-2.002-1.722-2.002 0v2.861h-2v-6h2v1.093c.872-1.616 4-1.736 4 1.548v3.359z"/>
                        </svg>
                      </a>
                    {% endif %}
                  </div> 
                {% endif %}
              </div>
            {% endif%}
            {% if block.settings.subheading != blank %}
              <p class="subheading opacity"> {{block.settings.subheading}} </p>
            {% endif %}

            {% if block.settings.description1 != blank or block.settings.description2 != blank %}
              <div class="contact-us-descriptions opacity">
                {% if block.settings.description1 != blank %}
                <div class="description">{{block.settings.description1}}</div>
                {% endif %}
                {% if block.settings.description2 != blank %}
                <div class="description">{{block.settings.description2}}</div>
                {% endif%}
              </div>
            {% endif %}
            {% if block.settings.menulist_heading2 != blank and block.settings.link_list2 != blank %}
              <div class="menu-item menu-item--{{ block.settings.menulist_heading2 | handle }}" >
                <div class="heading">{{block.settings.menulist_heading2}}</div>
                <ul>
                  {% for linkitem in block.settings.link_list2.links %}
                  <li class="subtext opacity"><a href="{{ linkitem.url}}">{{ linkitem.title}}</a></li>
                  {% endfor %}
                </ul>
              </div>
            {% endif %}
          </div>
      {% endif %}
    {% endfor %}
    {% if section.settings.caution_text != blank %}
      <span class="caution-text">{{ section.settings.caution_text }}</span>
    {% endif %}
    {% if section.settings.copyrights_text != blank %}
      <span class="copyright">{{ section.settings.copyrights_text }}</span>
    {% endif %}
  </div>
</footer>
{% schema %}

{
    "name": "Footer",
    "settings":[
      {
        "type": "text",
        "id": "caution_text",
        "label": "Text",
        "default": "Dear Customer, Please be aware that Borosil will never ask for any payment for your resolution."
      },
      {
        "type": "text",
        "id": "copyrights_text",
        "label": "Text",
        "default": "Copyright Â© 2011 - 2022 myborosil.com All rights reserved."
      }
    ],
    "blocks": [
        {
            "name": "Footer menu",
            "type": "footer_item",
            "settings": [
                {
                    "type": "text",
                    "id": "menulist_heading1",
                    "label": "Heading"
                }, {
                    "type": "link_list",
                    "id": "link_list",
                    "label": "Choose menu"
                }, {
                    "type": "text",
                    "id": "menulist_heading2",
                    "label": "Heading 2"
                }, {
                    "type": "link_list",
                    "id": "link_list2",
                    "label": "Choose menu"
                }, {
                    "type": "text",
                    "id": "subheading",
                    "label": "Sub-Heading"
                }, {
                    "type": "richtext",
                    "id": "description1",
                    "label": "Add description",
                    "default": "<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Sint delectus asperiores nesciunt autem facere! Iure.</p>"
                }, {
                    "type": "richtext",
                    "id": "description2",
                    "label": "Add description",
                    "default": "<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Sint delectus asperiores nesciunt autem facere! Iure.</p>"
                }, {
                    "type": "checkbox",
                    "id": "social_icons",
                    "label": "Show social media",
                    "default": false,
                    "info": "Show facebook, twitter and instagram"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "footer",
            "name": "Footer"
        }
    ]
}

{% endschema %}
