{% if request.page_type == 'collection' %}
  <div class="footer-links__container" data-collection-handle="{{ collection.handle }}">
    <div class="footer-links__wrapper"></div>
  </div>
{% endif %}

{% if request.page_type == 'article' %}
  <div class="footer-blog-links__container" data-blog-handle="{{ article.handle |  remove: 'borosil-blog/' }}">
    <div class="footer-blog-links__wrapper"></div>
  </div>
{% endif %}
<footer class="footer-container">
  <div class="footer-links">
    <div class="footer-brand lazy-load-parent">
      <img data-src="{{'Borosil-logo-white.png' | asset_url}}" alt="Borosil logo" width="260px" height="50px" loading="lazy">
    </div>
    {% for block in section.blocks %}
      {% if block.type == "footer_item"%}
          <div class="menu-link--{{ block.settings.menulist_heading1 | handle }}">
            {% if block.settings.menulist_heading1 %}
              <div class="menu-item menu-item--{{ block.settings.menulist_heading1 | handle }}">
                <div class="heading">{{block.settings.menulist_heading1}}</div>
                {% if block.settings.link_list %}
                  <ul>
                    {% for linkitem in block.settings.link_list.links %}
                    <li class="opacity"><a href="{{ linkitem.url}}">{{ linkitem.title}}</a></li>
                    {% endfor %}
                  </ul>
                {% endif %}
                {% if block.settings.social_icons %}
                  <div class="connect-social">
                    {% if settings.social_facebook_link %}
                      <a target="_blank" class="social" href="{{ settings.social_facebook_link }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="28.669" height="28.668" viewBox="0 0 28.669 28.668">
