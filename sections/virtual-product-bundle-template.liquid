                            <div class="product-group__item-image">
                                <img src="{% if product_item.featured_image %}{{ product_item.featured_image | img_url: '150x' }}{% else %}{{ product_item.featured_image | img_url: '150x' }}{% endif %}"
                                    loading="lazy"
                                    width="{{ product_item.featured_image.width }}"
                                    height="{{ product_item.featured_image.height }}">
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="mm-loader"></div>
            </div>
        {% endif %}

        {% assign virtual_product_bundle_array = product.metafields.custom.virtual_bundle_metafield.value %}
        {% assign products_variants = '' %}
        {% assign total_price = 0 %}
        {% assign main_product_url = product.url %}

        {% for tag in product.tags %}
            {% if tag contains 'bundle-product-discount_' %}
                {% assign product_discount_tag = tag | split: '_' | last %}
            {% endif %}
        {% endfor %}
        {% assign product_discount_tag =  product_discount_tag | prepend: '0.' %}
        {% assign virtual_bundle_discount = product_discount_tag | plus: 0 %}
        
        {% if virtual_product_bundle_array %}
            {% for product_item in virtual_product_bundle_array %}
                {% assign variant_id = product_item.id %}
                {% assign availability = false %}

                {% if product_item.available %}
                    {% assign availability = true %}
                {% else %}
                    {% assign availability = false %}
                    {% break %}
                {% endif %}

                {% if forloop.first %}
                    {% assign products_variants = variant_id %}
                {% else %}
                    {% assign products_variants = products_variants | append: ',' | append: variant_id %}
                {% endif %}
            {% endfor %}
                
        {% endif %}
        {% assign products_variants_array = products_variants | split: ',' | join: ',' %}
