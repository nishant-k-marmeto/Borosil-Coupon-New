                            <div class="product_badge_description">{{ block.settings.Icon_message }}</div>
                          </div>
                        {% endif %}
                      </div>
                    {% endif %}
                  {% endif %}
                {% endif %}
              {% endfor %}
            {% endif %}
          {% endfor %}
        </div>
