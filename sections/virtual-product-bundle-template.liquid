            <button class="virtual-bundle-product-atc {% unless availability %} is-disabled{% endunless %}" {% unless availability %} disabled="disabled" {% endunless %}type="button" data-virtual-bundling-variant-ids="{{ products_variants_array }}" data-main-product-url="{{main_product_url}}" data-main-product-id = "{{ product.id }}" data-bundle-discount-percentage = "{{virtual_bundle_discount}}"> {% if availability %} Add to cart {% else %} Sold Out {% endif %}</button>
